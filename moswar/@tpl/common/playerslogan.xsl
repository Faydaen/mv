<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
    <xsl:output method="html"/>

    <xsl:template name="playerslogan">
		<xsl:param name="player" />
        <xsl:if test="$player/slogan != ''">
            <div class="pers-slogan">
                <div class="block-bordered">
                    <ins class="t l"><ins></ins></ins><ins class="t r"><ins></ins></ins>
                    <div class="center clear">
                        <label><span>девиз</span></label>
                        <h3><xsl:value-of select="$player/slogan" /></h3>
                    </div>
                    <ins class="b l"><ins></ins></ins><ins class="b r"><ins></ins></ins>
                </div>
            </div>
        </xsl:if>
	</xsl:template>

</xsl:stylesheet>
