<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
    <xsl:output method="html"/>

    <xsl:template match="/data">
        <div class="column-right-topbg">
            <div class="column-right-bottombg" align="center">
            <div class="heading clear">
                <h2>
                    Тверская
                </h2>
            </div>

            <div id="content" class="square street3">

                <table class="buttons">
                    <tr>
                        <td>
                            <div class="button" id="square-stadium-button">
                                <a class="f" href="/petarena/"><i class="rl"></i><i class="bl"></i><i class="brc"></i>
                                    <div class="c">Стадион</div>
                                </a>
                            </div>
                        </td>
                        <td>
                            <div class="button" id="square-sovet-button">
                                <a class="f" href="/sovet/"><i class="rl"></i><i class="bl"></i><i class="brc"></i>
                                    <div class="c">Совет</div>
                                </a>
                            </div>
                        </td>
						<td>
                            <div class="button" id="square-pipeline-button">
                                <a class="f" href="/neft/"><i class="rl"></i><i class="bl"></i><i class="brc"></i>
                                    <div class="c">Нефтепровод</div>
                                </a>
                            </div>
                        </td>
                        <td>
                            <div class="button" id="square-prom-button">
                                <a class="f" href="/automobile/"><i class="rl"></i><i class="bl"></i><i class="brc"></i>
                                    <div class="c">Автозавод</div>
                                </a>
                            </div>
                        </td>
                    </tr>
                </table>

                <div class="welcome">
                    <a href="/petarena/"><i id="square-stadium-pic" title="Стадион"></i></a>
                    <a href="/sovet/"><i id="square-sovet-pic" title="Совет"></i></a>
                    <a href="/neft/"><i id="square-pipeline-pic" title="Нефтепровод"></i></a>
					<a href="/automobile/"><i id="square-prom-pic" title="Автозавод"></i></a>
                </div>

                <h3 class="curves clear">
                    <table class="buttons">
                        <tr>
							<td style="width:67%;">
                            </td>
                            <td style="width:33%;">
                                <div class="button" id="square-pizzeria-button">
                                    <a class="f" href="/square/"><i class="rl"></i><i class="bl"></i><i class="brc"></i>
                                        <div class="c">Центральная площадь &#8594;</div>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    </table>
                </h3>

                <script type="text/javascript">
                    $("#square-stadium-button").bind("mouseover",function(){ $("#square-stadium-pic").addClass("hover"); });
                    $("#square-stadium-button").bind("mouseout",function(){ $("#square-stadium-pic").removeClass("hover"); });
                    $("#square-sovet-button").bind("mouseover",function(){ $("#square-sovet-pic").addClass("hover"); });
                    $("#square-sovet-button").bind("mouseout",function(){ $("#square-sovet-pic").removeClass("hover"); });
                    $("#square-prom-button").bind("mouseover",function(){ $("#square-prom-pic").addClass("hover"); });
                    $("#square-prom-button").bind("mouseout",function(){ $("#square-prom-pic").removeClass("hover"); });
					$("#square-pipeline-button").bind("mouseover",function(){ $("#square-pipeline-pic").addClass("hover"); });
                    $("#square-pipeline-button").bind("mouseout",function(){ $("#square-pipeline-pic").removeClass("hover"); });
                </script>

            </div>
            </div>
        </div>
    </xsl:template>

</xsl:stylesheet>